@model TweetApp.Models.PersonModel
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<div class="container">

    <h2>Welcome to My Twitter Clone</h2>
    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
    {
        <div class="form-horizontal">
            <div class="form-group">
                <label for="lblUserName" class="control-label col-sm-2">UserName</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.UserId, htmlAttributes: new { @class = "form-control" })
                </div>

            </div>
            <div class="form-group">
                <label for="lblPassword" class="control-label col-sm-2">Password</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Password, htmlAttributes: new { @class = "form-control", @type = "password" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <label for="lblErrorMsg" class="label-danger"></label>
                    @if (Model != null && !string.IsNullOrEmpty(Model.ErrorMsg))
                    {
                        @Html.LabelFor(m => Model.ErrorMsg, htmlAttributes: new { @class = "label-danger" })
                        <br />
                    }
                    <input id="btnLogin" type="submit" class="btn btn-primary" value="Login" />
                </div>
            </div>
        </div>
    }
</div>
